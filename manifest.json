{
  "manifest_version": 3,
  "name": "bingNTP",
  "description": "Blank new tab page with the image of the day from bing as a background",
  "version": "1.2",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "service_worker": "bg.js"
  },
  "permissions": ["storage"],
  "host_permissions" : [
    "https://www.bing.com/*"
  ],
  "icons": {
    "16": "i16.png",
    "32": "i32.png",
    "48": "i48.png"
  }
}
